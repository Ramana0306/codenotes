{
  "name": "inline-code-notes",
  "displayName": "Inline Code Notes",
  "description": "Add notes to specific lines of code with a professional sidebar UI",
  "version": "0.1.0",
  "publisher": "ramana",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Productivity"],
  "activationEvents": ["onCommand:codeNotes.addNote"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeNotes.addNote",
        "title": "Add Code Note"
      }
    ],
    "keybindings": [
      {
        "command": "codeNotes.addNote",
        "key": "alt+n",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeNotes",
          "title": "Notes(Alt+N)",
          "icon": "media/pen.png"
        }
      ]
    },
    "views": {
      "codeNotes": [
        {
          "id": "codeNotes.sidebar",
          "name": "Code Notes",
          "type":"webview"
          
        }
      ]
    }
  },
  "devDependencies": {
    "vscode": "^1.1.42"
  }
}
