{
  "name": "inline-notes-hover",
  "displayName": "Inline Notes Hover",
  "description": "Add notes to specific lines of code with a professional sidebar UI",
  "version": "0.1.3",
  "publisher": "ramana",

  "icon":"icon.png",

  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ramana0306/codenotes"
  },

  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:codeNotes.addNote"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeNotes.addNote",
        "title": "Add Code Note"
      }
    ],
    "keybindings": [
      {
        "command": "codeNotes.addNote",
        "key": "alt+n",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeNotes",
          "title": "Notes (Alt+N)",
          "icon": "media/pen.png"
        }
      ]
    },
    "views": {
      "codeNotes": [
        {
          "id": "codeNotes.sidebar",
          "name": "Code Notes",
          "type": "webview"
        }
      ]
    }
  },
  "devDependencies": {
    "vscode": "^1.1.42"
  }
}
